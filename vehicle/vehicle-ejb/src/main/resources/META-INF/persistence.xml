<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">

	<persistence-unit name="vehicle-foundation">
		<jta-data-source>java:/VehicleFoundationDS</jta-data-source>
		<class>de.crowdcode.vehicle.domain.Engine</class>
		<class>de.crowdcode.vehicle.domain.EngineType</class>
		<class>de.crowdcode.vehicle.domain.Manufacturer</class>
		<class>de.crowdcode.vehicle.domain.Vendor</class>
		<class>de.crowdcode.vehicle.domain.Message</class>
		<class>de.crowdcode.vehicle.domain.Vehicle</class>
		<class>de.crowdcode.vehicle.fleet.domain.Fleet</class>
		<class>de.crowdcode.vehicle.log.domain.ApplicationLog</class>
		<class>de.crowdcode.vehicle.security.domain.User</class>
		<class>de.crowdcode.vehicle.security.domain.FleetGroup</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.use_sql_comments" value="false" />
			<property name="hibernate.id.new_generator_mappings" value="true" />
		</properties>
	</persistence-unit>

</persistence>
